apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: maya-apiserver
  namespace: storage
spec:
  replicas: 1
  template:
    metadata:
      labels:
        name: maya-apiserver
    spec:
      serviceAccountName: openebs-maya-operator
      containers:
      - name: maya-apiserver
        imagePullPolicy: IfNotPresent
        image: docker.io/openebs/m-apiserver:<%= version %>
        ports:
        - containerPort: 5656
        env:
        - name: OPENEBS_IO_JIVA_CONTROLLER_IMAGE
          value: "docker.io/openebs/jiva:<%= version %>"
        - name: OPENEBS_IO_JIVA_REPLICA_IMAGE
          value: "docker.io/openebs/jiva:<%= version %>"
        - name: OPENEBS_IO_VOLUME_MONITOR_IMAGE
          value: "docker.io/openebs/m-exporter:<%= version %>"
        - name: OPENEBS_IO_JIVA_REPLICA_COUNT
          value: "<%= default_replicas %>"
        <% if default_controller_node_selector %>
        - name: DEFAULT_CONTROLLER_NODE_SELECTOR
          value: "<%= default_controller_node_selector %>"
        <% end %>
        <% if default_replica_node_selector %>
        - name: DEFAULT_REPLICA_NODE_SELECTOR
          value: "<%= default_replica_node_selector %>"
        <% end %>