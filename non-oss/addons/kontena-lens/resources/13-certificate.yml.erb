<% if config.host %>
apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: <%= config.name %>
  namespace: kontena-lens
spec:
  secretName: <%= config.name %>-tls
  issuerRef:
    name: letsencrypt
  commonName: <%= config.host %>
  dnsNames:
  - <%= config.host %>
  acme:
    config:
    - http01:
        ingressClass: nginx
      domains:
      - <%= config.host %>
<% end %>