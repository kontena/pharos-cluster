<% if config&.filesystem&.enabled %>
kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: kontena-storage-fs
provisioner: ceph.com/cephfs
parameters:
    monitors: "<%= cephfs_monitors %>"
    adminId: admin
    adminSecretName: rook-ceph-mon
    adminSecretNamespace: "kontena-storage"
    claimRoot: /volumes
<% end %>
