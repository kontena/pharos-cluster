apiVersion: v1
kind: ServiceAccount
metadata:
  name: pharos-license-enforcer
  namespace: kube-system
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: pharos-license-enforcer-nodes
rules:
- apiGroups: [""]
  resources: ["nodes"]
  verbs:
    - get
    - list
- apiGroups: [""]
  resources: ["nodes/status"]
  verbs:
    - update # To be able to push license status
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: pharos-license-enforcer-basic
rules:
- apiGroups: [""]
  resources: ["secrets"]
  resourceNames:
    - pharos-license
  verbs:
    - get
    - update
    - patch
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: pharos-license-enforcer-cm
rules:
- apiGroups: [""]
  resources: ["configmaps"]
  resourceNames:
    - "cluster-info"
  verbs:
    - get
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: pharos-license-enforcer-basic
  namespace: kube-system
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: pharos-license-enforcer
subjects:
- name: pharos-license-enforcer
  kind: ServiceAccount
  namespace: kube-system
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: pharos-license-enforcer-cm
  namespace: kube-public
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: pharos-license-enforcer-cm
subjects:
- name: pharos-license-enforcer
  kind: ServiceAccount
  namespace: kube-system
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: pharos-license-enforcer-nodes
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: pharos-license-enforcer-nodes
subjects:
- name: pharos-license-enforcer
  kind: ServiceAccount
  namespace: kube-system
