<%- if charts_enabled -%>
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: helm-api
  namespace: kontena-lens
  labels:
    app: helm-api
spec:
  selector:
    matchLabels:
      app: helm-api
  template:
    metadata:
      labels:
        app: helm-api
    spec:
      restartPolicy: Always
      securityContext:
        fsGroup: 1000
      containers:
        - image: <%= image_repository %>/helm-api:<%= version %>
          name: api
          env:
          - name: TILLER_NAMESPACE
            value: kontena-lens-tiller
          - name: REPOSITORIES
            value: <%= helm_repositories %>
          resources:
            requests:
              memory: "128Mi"
              cpu: "0.1"
            limits:
              memory: "256Mi"
          readinessProbe:
            httpGet:
              path: /ping
              port: 9292
              scheme: HTTP
            timeoutSeconds: 5
          volumeMounts:
            - mountPath: /app/.helm
              name: helm-home
      volumes:
      - name: helm-home
        <%- if config.persistence&.enabled -%>
        persistentVolumeClaim:
          claimName: lens-helm-pvc
        <%- else -%>
        emptyDir: {}
        <%- end -%>
<%- end -%>