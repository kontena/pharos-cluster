<% if tls_enabled %>
<% if email %>
apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: kontena-lens
  namespace: kontena-lens
spec:
  secretName: kontena-lens-tls
  issuerRef:
    name: letsencrypt
  commonName: <%= host %>
  dnsNames:
  - <%= host %>
  acme:
    config:
    - http01:
        ingressClass: nginx
      domains:
      - <%= host %>
<% end %>
<% end %>
